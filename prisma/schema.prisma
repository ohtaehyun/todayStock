generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Stock {
  id  Int @default(autoincrement()) @id
  ticker String @unique
  createdAt DateTime @default(now())

  topStocks TopStock[]
}

model TopStock {
  id Int @default(autoincrement()) @id
  stockId Int
  startDate DateTime
  endDate DateTime
  rank Int
  marketCap BigInt
  createdAt DateTime @default(now())

  stock Stock @relation(fields: [stockId], references: [id])
  @@unique([stockId, startDate])
  @@unique([stockId, startDate, rank])
}